{
  "name": "cpp-utils",
  "description": "Miscellaneous C/C++ compilation/compiler detection utility functions.",
  "version": "1.0.1",
  "author": "Elhanan Flesch",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/synthetic-borealis/cpp-utils.js.git"
  },
  "bugs": {
    "url": "https://github.com/synthetic-borealis/cpp-utils.js/issues"
  },
  "license": "MIT",
  "keywords": [
    "C++",
    "C"
  ],
  "main": "index.js",
  "files": [
    "index.js",
    "index.d.ts",
    "lib/",
    "docs/"
  ],
  "scripts": {
    "lint": "eslint lib",
    "clean:ts-def": "del-cli **/*.d.ts !node_modules/**/*",
    "clean:docs": "del-cli docs/*.md",
    "docs": "jsdoc2md index.js lib/**/*.js > docs/API.md",
    "generate-ts": "npx -p typescript tsc index.js --declaration --allowJs --emitDeclarationOnly --outDir ./",
    "test": "jest",
    "prepack": "yarn generate-ts",
    "postpack": "yarn clean:ts-def",
    "prepublish": "in-publish && yarn generate-ts || not-in-publish",
    "postpublish": "yarn clean:ts-def"
  },
  "devDependencies": {
    "del-cli": "^5.0.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.8.5",
    "in-publish": "^2.0.1",
    "jest": "^27.5.1",
    "jsdoc-to-markdown": "^7.1.1"
  }
}
