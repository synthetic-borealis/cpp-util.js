{
  "name": "cpp-util",
  "description": "Miscellaneous C/C++ compilation/checking utility functions.",
  "version": "0.1.0",
  "author": "Elhanan Flesch",
  "license": "MIT",
  "keywords": [
    "C++",
    "C"
  ],
  "main": "index.js",
  "files": [
    "index.js",
    "index.d.ts",
    "lib/index.js",
    "lib/index.d.ts",
    "lib/compilerDetection.js",
    "lib/compilerDetection.d.ts",
    "lib/compilation.js",
    "lib/compilation.d.ts",
    "lib/errors/compilerNotFound.js",
    "lib/errors/compilerNotFound.d.ts",
    "lib/errors/noCompilerFound.js",
    "lib/errors/noCompilerFound.d.ts",
    "lib/errors/compilationFailed.js",
    "lib/errors/compilationFailed.d.ts",
    "lib/utils/executionHelpers.js",
    "lib/utils/executionHelpers.d.ts",
    "lib/utils/validationHelpers.js",
    "lib/utils/validationHelpers.d.ts"
  ],
  "scripts": {
    "lint": "eslint lib",
    "lint:log": "eslint lib > lint.log",
    "lint:fix": "eslint --fix lib",
    "generate-ts": "npx -p typescript tsc index.js --declaration --allowJs --emitDeclarationOnly --outDir ./",
    "test": "jest"
  },
  "devDependencies": {
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.4.7"
  }
}
