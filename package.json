{
  "name": "cpp-utils",
  "description": "Miscellaneous C/C++ compilation/compiler detection utility functions.",
  "version": "1.0.2",
  "author": "Elhanan Flesch",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/synthetic-borealis/cpp-utils.js.git"
  },
  "bugs": {
    "url": "https://github.com/synthetic-borealis/cpp-utils.js/issues"
  },
  "license": "MIT",
  "keywords": [
    "C++",
    "C"
  ],
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib/",
    "types/",
    "docs/"
  ],
  "scripts": {
    "lint": "eslint lib/**/*.js __tests__/**/*.js",
    "clean:ts-def": "del-cli **/*.d.ts !node_modules/**/*",
    "docs": "node scripts/build-docs.js",
    "build:ts-def": "tsc lib/index.js --declaration --allowJs --emitDeclarationOnly --outDir ./types",
    "test": "jest",
    "coverage": "jest --coverage",
    "prepack": "yarn build:ts-def",
    "postpack": "yarn clean:ts-def",
    "prepublish": "in-publish && yarn generate-ts || not-in-publish",
    "postpublish": "yarn clean:ts-def"
  },
  "devDependencies": {
    "del-cli": "^5.0.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^27.0.1",
    "in-publish": "^2.0.1",
    "jest": "^29.0.1",
    "jsdoc-to-markdown": "^7.1.1",
    "typescript": "^4.8.2"
  }
}
